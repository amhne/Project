<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/headerWrapper"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="7dp"
                android:paddingVertical="6dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:text="@string/Back"
                android:gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/inter"
                android:textColor="@color/purple"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/Settings"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/header"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="22dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profile_img"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="4dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:layout_toEndOf="@id/image"
            android:layout_alignTop="@id/image" />

        <LinearLayout
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/name"
            android:layout_alignStart="@id/name">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:paddingHorizontal="2dp"
                android:paddingTop="5dp"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_email"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:fontFamily="@font/inter"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="22dp"
        android:layout_below="@id/info"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_below="@id/line">

        <TextView
            android:id="@+id/appSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/settings_title"
            android:fontFamily="@font/inter"
            android:textColor="@color/dark_gray"/>

        <LinearLayout
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_below="@id/appSettings"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/changeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_password"/>

            <TextView
                android:id="@+id/changeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="@string/settings_change_button"
                android:gravity="center_vertical"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/forwardIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_forward" />

        </LinearLayout>

        <View
            android:id="@+id/buttonLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/changePassword"
            android:background="@color/light_gray"/>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_below="@id/buttonLine"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout"/>

            <TextView
                android:id="@+id/logoutText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="@string/settings_logout_button"
                android:gravity="center_vertical"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/red"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/dimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/confirmLayout"
        android:layout_width="280dp"
        android:layout_height="230dp"
        android:paddingVertical="32dp"
        android:paddingHorizontal="24dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/confirm_logout_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/confirmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@string/settings_logout_button"
            android:fontFamily="@font/inter_bold"/>

        <TextView
            android:id="@+id/confirmSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/logout_confirmation"
            android:fontFamily="@font/inter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/logout_button_white"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/Cancel"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:clickable="true"
                android:focusable="true"/>

            <Button
                android:id="@+id/yesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/logout_button_purple"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
